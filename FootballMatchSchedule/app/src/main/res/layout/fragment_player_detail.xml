            android:text="@string/s24"
            app:layout_constraintStart_toStartOf="@+id/textView_fragment_player_detail_1_4"
            app:layout_constraintTop_toBottomOf="@+id/textView_fragment_player_detail_1_4"
            app:layout_constraintEnd_toEndOf="@+id/textView_fragment_player_detail_1_4"/>

        <!--1_7-->
        <TextView
            android:id="@+id/textView_fragment_player_detail_1_7"
            android:layout_width="wrap_content"
