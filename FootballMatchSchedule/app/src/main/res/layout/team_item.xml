<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <!--1-->
    <ImageView
        android:id="@+id/imageView_team_item_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_bug_report_black_24dp"/>

    <!--2-->
    <TextView
        android:id="@+id/textView_team_item_2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/s4"
        android:textSize="8pt"
        app:layout_constraintStart_toEndOf="@+id/imageView_team_item_1"
        app:layout_constraintTop_toTopOf="@+id/imageView_team_item_1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_team_item_1"
        android:layout_marginLeft="20dp"/>
</android.support.constraint.ConstraintLayout>