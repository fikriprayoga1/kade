<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!--1-->
    <ImageView
        android:id="@+id/imageView_item_team_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/a27"
        android:src="@drawable/ic_bug_report_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--2-->
    <TextView
        android:id="@+id/textView_item_team_2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/a4"
        android:textSize="8pt"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_item_team_1"
        app:layout_constraintStart_toEndOf="@+id/imageView_item_team_1"
        app:layout_constraintTop_toTopOf="@+id/imageView_item_team_1" />
</androidx.constraintlayout.widget.ConstraintLayout>