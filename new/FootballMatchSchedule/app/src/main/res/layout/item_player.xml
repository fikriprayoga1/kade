<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!--1-->
    <ImageView
        android:id="@+id/imageView_player_item_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/a29"
        android:src="@drawable/ic_bug_report_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--2-->
    <TextView
        android:id="@+id/textView_player_item_2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/a6"
        android:textColor="@color/primary_text"
        android:textSize="6pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_player_item_1"
        app:layout_constraintTop_toTopOf="parent" />

    <!--3-->
    <TextView
        android:id="@+id/textView_player_item_3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/a10"
        android:textColor="@color/secondary_text"
        android:textSize="6pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_player_item_2"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>