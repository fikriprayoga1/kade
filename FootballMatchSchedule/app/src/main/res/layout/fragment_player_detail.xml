            android:background="@color/colorPrimary"/>

        <!--1_2-->
        <TextView
            android:id="@+id/textView_fragment_player_detail_1_2"
            android:layout_width="wrap_content"
            android:text="@string/s6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_fragment_player_detail_1_1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="10pt"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />

        <!--1_3-->
        <TextView
            android:id="@+id/textView_fragment_player_detail_1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:textSize="7pt"
            android:text="@string/s22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_fragment_player_detail_1_2"
            app:layout_constraintEnd_toStartOf="@+id/textView_fragment_player_detail_1_4"
            android:layout_marginTop="20dp"/>

        <!--1_4-->
        <TextView
            android:id="@+id/textView_fragment_player_detail_1_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s23"
            android:textColor="@color/secondary_text"
            android:textSize="7pt"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/textView_fragment_player_detail_1_3"
            app:layout_constraintTop_toBottomOf="@+id/textView_fragment_player_detail_1_2"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--1_5-->
        <TextView
            android:id="@+id/textView_fragment_player_detail_1_5"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/s24"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20pt"
            app:layout_constraintStart_toStartOf="@+id/textView_fragment_player_detail_1_3"
            app:layout_constraintTop_toBottomOf="@+id/textView_fragment_player_detail_1_3"
            app:layout_constraintEnd_toEndOf="@+id/textView_fragment_player_detail_1_3"/>

