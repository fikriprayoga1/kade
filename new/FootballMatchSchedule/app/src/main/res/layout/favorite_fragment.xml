<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FavoriteFragment">

    <!--1-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout_favorite_fragment_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <!--1_1-->
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem_favorite_fragment_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a15" />

        <!--1_2-->
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem_favorite_fragment_1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a17" />

    </com.google.android.material.tabs.TabLayout>

    <!--2-->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_favorite_fragment_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout_favorite_fragment_1" />
</androidx.constraintlayout.widget.ConstraintLayout>