<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".frontendcontroller.TeamDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <!--1-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout_fragment_team_detail_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--1_1-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout_fragment_team_detail_1_1"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="200dp">

            <!--1_1_1-->
            <ImageView
                android:id="@+id/imageView_fragment_team_detail_1_1_1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_bug_report_black_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="25dp"/>

            <!--1_1_2-->
            <TextView
                android:id="@+id/textView_fragment_team_detail_1_1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView_fragment_team_detail_1_1_1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:textSize="8pt"
                android:textStyle="bold"
                android:textColor="@color/background"
                android:text="@string/s4" />

            <!--1_1_3-->
            <TextView
                android:id="@+id/textView_fragment_team_detail_1_1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_fragment_team_detail_1_1_2"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/background"
                android:textSize="6pt"
                android:text="@string/s1" />

            <!--1_1_4-->
            <TextView
                android:id="@+id/textView_fragment_team_detail_1_1_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_fragment_team_detail_1_1_3"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/background"
                android:text="@string/s20" />
        </android.support.constraint.ConstraintLayout>

        <!--1_2-->
        <TextView
            android:id="@+id/textView_fragment_team_detail_1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout_fragment_team_detail_1_1"
            android:layout_marginTop="20dp"
            android:textColor="@color/primary_text"
            android:text="@string/s21"/>

        <!--1_3-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_fragment_team_detail_1_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_fragment_team_detail_1_2"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!--1_4-->
        <ImageView
            android:id="@+id/imageView_fragment_team_detail_1_4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_favorite_border_red_24dp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout_fragment_team_detail_1_1"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout_fragment_team_detail_1_1"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>